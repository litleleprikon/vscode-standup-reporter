{
  "name": "vscode-standup-reporter",
  "displayName": "vscode-standup-reporter",
  "description": "Create records for daily scrum standups.",
  "version": "0.0.1",
  "publisher": "litleleprikon",
  "engines": {
    "vscode": "^1.28.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.newRecord"
  ],
  "main": "./out/extension",
  "contributes": {
    "configuration": {
      "title": "Standup Reporter Configuration",
      "properties": {
        "standupReporter.folder": {
          "type": "string",
          "default": "~/.vscode-standup-reporter",
          "description": "Folder where to store all reports and useful data",
          "scope": "application"
        },
        "standupReporter.jira.enable": {
          "type": "bool",
          "default": false,
          "description": "Use Jira to grab changes",
          "scope": "application"
        },
        "standupReporter.jira.host": {
          "type": "string",
          "default": "studio.atlassian.com",
          "description": "Host of Jira instance",
          "scope": "application"
        },
        "standupReporter.jira.username": {
          "type": "string",
          "default": "",
          "description": "Username in jira",
          "scope": "application"
        }
      }
    },
    "commands": [
      {
        "command": "extension.newRecord",
        "title": "Create new record"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test",
    "lint:editorconfig": "editorconfig-checker --exclude-regexp 'coverage|out|node_modules|yarn*' ./",
    "lint:ts": "tslint -c tslint.json ./{src,test}/**/*.ts"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/chai": "^4.1.6",
    "@types/glob": "^7.1.1",
    "@types/xml-js": "^1.0.0",
    "@types/istanbul": "^0.4.30",
    "@types/lodash": "^4.14.118",
    "@types/mocha": "^5.2.5",
    "@types/node": "^8.10.37",
    "@types/source-map-support": "^0.4.1",
    "@types/xml2js": "^0.4.3",
    "chai": "^4.2.0",
    "codeclimate-test-reporter": "^0.5.1",
    "decache": "^4.4.0",
    "editorconfig-checker": "^1.3.3",
    "glob": "^7.1.3",
    "istanbul": "^0.4.5",
    "mocha": "^5.2.0",
    "remap-istanbul": "^0.12.0",
    "source-map-support": "^0.5.9",
    "tslint": "^5.11.0",
    "typescript": "^3.1.3",
    "vsce": "^1.52.0",
    "vscode": "^1.1.6"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "lodash": "^4.17.11",
    "xml-js": "^1.6.8"
  }
}
